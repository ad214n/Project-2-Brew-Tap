
<ul>

<form action="/breweries/{{brewery._id}}?_method=PUT" method="POST">
     <li>
        <label for="name">Name</label>
        <input type="text" name="name" value="{{brewery.name}}">
    </li>
    <li>
        <label for="yearBuilt">Year Built</label>
        <input type="number" name="yearBuilt" value="{{brewery.yearBuilt}}">
    </li>
    <li>
        <label for="city">City</label>
        <input type="text" name="city" value="{{brewery.city}}">
    </li>

    <li>
        <label for="state">State</label>
        <input type="text" name="state" value="{{brewery.state}}">
    </li>

    <input type="submit" value="Create">
</form>
</ul>